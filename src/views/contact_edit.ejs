<%- include('partials/_header'); %>
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-title">
                    <h4 class="text-center">Actualizar los datos de: <%= data[0].name %></h4>
                </div>
                <div class="card-body">
                    <form action="/updateContact/<%= data[0].id %>" method="post">
                        <div class="input-group mb-2">
                            <label for="" class="col-1 col-form-label">Nombre</label>
                            <input type="text" name="name" placeholder="Escribe tu nombre" class="form-control" value="<%= data[0].name %>">
                        </div>
                        <div class="input-group mb-2">
                            <label for="" class="col-1 col-form-label">Teléfono</label>
                            <input type="number" name="phone" placeholder="Escribe tu telefono" class="form-control" value="<%= data[0].phone %>">
                        </div>
                        <div class="input-group mb-2">
                            <label for="" class="col-1 col-form-label">Fecha de Nacimiento</label>
                           <input type="date" name="date"class="form-control" value="<%= data[0].date %>">
                        </div>
                        <div class="input-group mb-2">
                            <label for="" class="col-1 col-form-label">Dirección</label>
                            <input type="text" name="address" placeholder="Escribe tu direccion" class="form-control" value="<%= data[0].address %>">
                        </div>
                        <div class="input-group mb-2">
                            <label for="" class="col-1 col-form-label">Correo</label>
                            <input type="text" name="email" placeholder="Escribe tu correo" class="form-control" value="<%= data[0].email %>">
                        </div>
                        <button type="submit" class="btn btn-primary">Guardar Información</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('partials/_footer'); %>